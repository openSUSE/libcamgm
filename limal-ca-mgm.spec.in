%config /var/lib/CAM/openssl.cnf.tmpl
@limallibdir@/lib*.so.*

%files devel
%defattr(-,root,root)
%dir @limallibdir@
@limallibdir@/lib*.so
@limallibdir@/lib*.la
%dir @limalincludedir@/@RPMLIB@
